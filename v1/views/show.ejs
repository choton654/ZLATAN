            <div class="col-lg-9">
                <figure class="shadow p-3 mb-5 rounded" style="width:100%">

                    <img class="figure-img img-fluid img-thumbnail" style="width:100%" src="<%= doc.image %>" alt="">
                    <div class="caption-full" style="padding: 9px">
                        <figcaption class="figure-caption text-left" style="padding: 9px">
                            <h4>
                                <a href="#" style="color: rgb(238, 255, 0)">
                                    <%= doc.title %>
                                </a>
                            </h4>
                            <h5 style="color: beige"> <strong>Submitted By:</strong>
                                <%= doc.author.username %>
                            </h5>
                            <h4 style="color: rgb(238, 255, 0)"><strong> Description:</strong></h4>
                            <h6 style="color: beige">
                                <%= doc.description %>
                            </h6>

                        </figcaption>
                        <% if(currentuser && doc.author.id.equals(currentuser._id)){%>
                            <a class="btn btn-danger btn-sm" href="/campground/<%= doc._id %>/delete">Delete</a>
                            <a class="btn btn-secondary btn-sm" href="/campground/<%= doc._id %>/edit">Edit Camp</a>
                            <% } %>
                    </div>
                </figure>
            </div>
            <div class="col-md-3">
                <div class="shadow p-3 mb-5 rounded">
                    <div class="text-right">
                        <a href="/campground/<%= doc._id %>/comment/new" class="btn btn-outline-success btn-lg btn-block">Comment Here</a>
                    </div>



                    <hr>

                    <% doc.comments.forEach(function(item){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong style="color: beige"><%=  item.author.username %>:</strong>

                                <p style="color: beige">
                                    <%= item.text %>
                                </p>
                                <div class="text-right">
                                    <% if(currentuser && item.author.id.equals(currentuser._id)){%>

                                        <a class="btn btn-outline-warning btn-sm" href="/campground/<%= doc._id %>/comment/<%= item._id %>/edit">Edit</a>
                                        <form action="/campground/<%= doc._id %>/comment/<%= item._id %>?_method=DELETE" method="POST" style="display: inline">
                                            <button class="btn btn-sm btn-outline-danger"> Delete </button>


                                        </form>
                                        <%}%>
                                </div>

                            </div>
                        </div>
                        <%}) %>
                </div>

            </div>






        </div>
    </div>





    <%- include('./partials/footer') %>